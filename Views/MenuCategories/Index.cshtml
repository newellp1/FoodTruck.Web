@model IEnumerable<FoodTruck.Web.Models.MenuCategory>

@{
    ViewData["Title"] = "Menu Categories";
}

<h2>Menu Categories</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@* ============================================================
   Categories table.
   Shows:
   - Name (with an arrow if it's a sub-category)
   - Parent Category
   - DisplayOrder
   - Actions
   ============================================================ *@

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        There are no categories yet. Use "Create New" to add one.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Parent Category</th>
                <th>Display Order</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @* If this category has a parent, show a small arrow to hint it's a sub-category *@
                    @if (item.ParentCategory != null)
                    {
                        <span class="text-muted">&#8627;</span> @item.Name
                    }
                    else
                    {
                        @item.Name
                    }
                </td>
                <td>
                    @if (item.ParentCategory != null)
                    {
                        @item.ParentCategory.Name
                    }
                    else
                    {
                        <span class="text-muted">(Top-level)</span>
                    }
                </td>
                <td>@item.DisplayOrder</td>
                <td class="text-end">
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-secondary me-1">
                        Edit
                    </a>
                    <a asp-action="Details"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-info me-1">
                        Details
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}