@model FoodTruck.Web.Models.MenuCategory

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

@* ============================================================
   Confirmation page to delete a category.
   Shows key info:
   - Name
   - Description
   - DisplayOrder
   - ParentCategory
   ============================================================ *@

<h4>Are you sure you want to delete this category?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">
            @if (string.IsNullOrWhiteSpace(Model.Description))
            {
                <span class="text-muted">(No description)</span>
            }
            else
            {
                @Model.Description
            }
        </dd>

        <dt class="col-sm-3">Display Order</dt>
        <dd class="col-sm-9">@Model.DisplayOrder</dd>

        <dt class="col-sm-3">Parent Category</dt>
        <dd class="col-sm-9">
            @if (Model.ParentCategory != null)
            {
                @Model.ParentCategory.Name
            }
            else
            {
                <span class="text-muted">(Top-level category)</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>