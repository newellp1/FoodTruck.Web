@model FoodTruck.Web.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<h2>Delete Schedule</h2>

<h4>Are you sure you want to delete this?</h4>

<dl class="row">
    <dt class="col-sm-2">Truck</dt>
    <dd class="col-sm-10">@Model.Truck?.Name</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location?.Name</dd>

    <dt class="col-sm-2">Start</dt>
    <dd class="col-sm-10">@Model.StartTime.ToLocalTime()</dd>

    <dt class="col-sm-2">End</dt>
    <dd class="col-sm-10">@Model.EndTime.ToLocalTime()</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>