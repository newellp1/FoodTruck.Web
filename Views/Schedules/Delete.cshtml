@model FoodTruck.Web.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
}

<h2>Delete Schedule</h2>

@* ============================================================
   Confirmation page to delete a schedule.
   ============================================================ *@

<h4>Are you sure you want to delete this schedule?</h4>

<dl class="row">
    <dt class="col-sm-3">Truck</dt>
    <dd class="col-sm-9">@Model.Truck?.Name</dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Location?.Name</dd>

    <dt class="col-sm-3">Start</dt>
    <dd class="col-sm-9">@Model.StartTime.ToLocalTime()</dd>

    <dt class="col-sm-3">End</dt>
    <dd class="col-sm-9">@Model.EndTime.ToLocalTime()</dd>

    <dt class="col-sm-3">Active</dt>
    <dd class="col-sm-9">
        @if (Model.IsActive)
        {
            <span class="badge bg-success">Active</span>
        }
        else
        {
            <span class="badge bg-secondary">Inactive</span>
        }
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
