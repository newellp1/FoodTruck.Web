@model IEnumerable<FoodTruck.Web.Models.Schedule>

@{
    // Sets the title that appears in the browser tab and page header
    ViewData["Title"] = "Schedules";
}

<h2>Schedules</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@* ============================================================
   Schedules Table
   - Lists all schedule entries for all trucks/locations.
   - Highlights active schedules visually.
   ============================================================ *@

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        There are no schedules yet. Use "Create New" to add one.
    </div>
}
else
{
    <table class="table table-striped table-bordered align-middle">
        <thead>
            <tr>
                <th>Truck</th>          @* The name of the food truck *@
                <th>Location</th>       @* The scheduled location *@
                <th>Start</th>          @* Starting date/time of the schedule *@
                <th>End</th>            @* Ending date/time of the schedule *@
                <th>Active</th>         @* Whether the schedule is currently active *@
                <th class="text-end">Actions</th> @* Action buttons *@
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.OrderBy(s => s.StartTime))
        {
            // Add a subtle highlight if the schedule is active
            var rowClass = item.IsActive ? "table-success" : "";

            <tr class="@rowClass">
                <td>@item.Truck?.Name</td>
                <td>@item.Location?.Name</td>
                <td>@item.StartTime.ToLocalTime()</td>
                <td>@item.EndTime.ToLocalTime()</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </td>

                <td class="text-end">
                    <a asp-action="Edit"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-secondary me-1">
                        Edit
                    </a>

                    <a asp-action="Details"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-info me-1">
                        Details
                    </a>

                    <a asp-action="Delete"
                       asp-route-id="@item.Id"
                       class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}