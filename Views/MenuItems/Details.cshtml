@model FoodTruck.Web.Models.MenuItem

@{
    ViewData["Title"] = "Menu Item Details";
}

<h2>Menu Item Details</h2>

<hr />

<dl class="row">
    @* Category (Parent â†’ Child) *@
    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">
        @{
            var category = Model.MenuCategory;
            if (category != null && category.ParentCategory != null)
            {
                @($"{category.ParentCategory.Name} \u2192 {category.Name}")
            }
            else if (category != null)
            {
                @category.Name
            }
            else
            {
                @:<span class="text-muted">(No Category)</span>
            }
        }
    </dd>

    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Description</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            @Model.Description
        }
        else
        {
            <span class="text-muted">(No description)</span>
        }
    </dd>

    <dt class="col-sm-3">Price</dt>
    <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-3">Available?</dt>
    <dd class="col-sm-9">
        @if (Model.IsAvailable)
        {
            <span class="badge bg-success">Available</span>
        }
        else
        {
            <span class="badge bg-danger">Unavailable</span>
        }
    </dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        Back to List
    </a>
</div>