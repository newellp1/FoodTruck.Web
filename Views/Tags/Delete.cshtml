@model FoodTruck.Web.Models.Tag

@{
    ViewData["Title"] = "Delete Tag";
}

<div class="container mt-4">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Tag</h2>

    <div class="alert alert-warning mt-4">
        <strong>Warning!</strong> Are you sure you want to delete this tag?
    </div>

    <div class="card">
        <div class="card-header">
            <h5>@Model.Name <span class="badge bg-@Model.BadgeColor">@Model.Name</span></h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Badge Color:</dt>
                <dd class="col-sm-9">@Model.BadgeColor</dd>

                <dt class="col-sm-3">Display Order:</dt>
                <dd class="col-sm-9">@Model.DisplayOrder</dd>

                <dt class="col-sm-3">Menu Items:</dt>
                <dd class="col-sm-9">@Model.MenuItemTags.Count item(s) currently have this tag</dd>
            </dl>

            @if (Model.MenuItemTags.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> This tag is currently applied to @Model.MenuItemTags.Count menu item(s). 
                    Deleting this tag will remove it from all menu items.
                </div>
            }

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
