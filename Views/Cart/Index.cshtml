@model FoodTruck.Web.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

<hr />

<!-- Show the cart lines (table with items, quantity, etc.) -->
<div id="cart-lines">
    <partial name="_CartLinesPartial" model="Model" />
</div>

@if (Model.Items != null && Model.Items.Any())
{
    <div class="mt-3 d-flex justify-content-between align-items-center">

        <!-- Left side: continue shopping / clear cart -->
        <div>
            <a asp-controller="Menu"
               asp-action="Index"
               class="btn btn-outline-secondary me-2">
                ‚Üê Continue Shopping
            </a>

            <a asp-controller="Cart"
               asp-action="Clear"
               class="btn btn-outline-danger">
                Clear Cart
            </a>
        </div>

        <!-- Right side: single Checkout button -->
        <div>
            <a asp-controller="Orders"
               asp-action="Checkout"
               class="btn btn-success">
                Checkout
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        Your cart is empty. Go to the <a asp-controller="Menu" asp-action="Index">menu</a> to add some items.
    </div>
}