@model FoodTruck.Web.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Cart";
}

<h2>Your Cart</h2>

<div id="cart-lines">
    @Html.Partial("_CartLinesPartial", Model)
</div>

<div class="mt-3">
    <a asp-action="Clear" class="btn btn-outline-secondary">Clear Cart</a>
    <a asp-controller="Orders" asp-action="Checkout" class="btn btn-primary float-end">Checkout</a>
</div>