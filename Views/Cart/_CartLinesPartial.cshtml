@model FoodTruck.Web.Models.ViewModels.CartViewModel

@if (!Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Modifiers</th>
                <th>Notes</th>
                <th style="width: 120px;">Qty</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            var item = Model.Items[i];
            <tr>
                <td>@item.Name</td>
                <td>@item.ModifierSummary</td>
                <td>@item.Notes</td>
                <td>
                    <div class="input-group input-group-sm">
                        <button class="btn btn-outline-secondary js-qty-minus" data-index="@i">-</button>
                        <input class="form-control text-center js-qty" data-index="@i" value="@item.Quantity" />
                        <button class="btn btn-outline-secondary js-qty-plus" data-index="@i">+</button>
                    </div>
                </td>
                <td>$@item.LineTotal</td>
                <td>
                    <button class="btn btn-sm btn-danger js-remove-line" data-index="@i">Remove</button>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-end">
        <strong>Subtotal: $@Model.Subtotal</strong>
    </div>
}