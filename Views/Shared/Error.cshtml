@model ErrorViewModel
@{
    ViewData["Title"] = "Something Went Wrong";
}

<div class="container py-5">
    <div class="text-center">

        <h1 class="display-5 text-danger mb-3">
            <i class="bi bi-exclamation-triangle-fill"></i>
            Oops! Something went wrong.
        </h1>

        <p class="lead mb-4">
            We couldn't complete your request. Please try again or contact support if the issue continues.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <strong>Error ID:</strong>
                <code>@Model.RequestId</code>
            </p>
        }

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
            Return to Home
        </a>

        <hr class="my-4" />

        <h4>Developer Info</h4>
        <p class="small text-muted">
            Detailed error information is available only in the <strong>Development</strong> environment.
        </p>
        <p class="small text-muted">
            To enable it locally, set:
        </p>

        <pre class="bg-light p-2 border rounded small">ASPNETCORE_ENVIRONMENT=Development</pre>

        <p class="small text-muted">
            Do <strong>not</strong> enable Development mode on production servers.
        </p>
    </div>
</div>
