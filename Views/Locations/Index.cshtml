@model IEnumerable<FoodTruck.Web.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<h2>Locations</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Location</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Active?</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var loc in Model)
    {
        <tr>
            <td>@loc.Name</td>
            <td>
                @loc.Address,
                @loc.City, @loc.State @loc.ZipCode
            </td>
            <td>
                @(loc.IsActive ? "Yes" : "No")
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@loc.Id" class="btn btn-sm btn-secondary">Edit</a>
                <a asp-action="Details" asp-route-id="@loc.Id" class="btn btn-sm btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@loc.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
